<coordinator-app name="HadoopTestFacilityAvro"
                 frequency="${coord:minutes(5)}"
                 start="2016-11-15T00:00Z" end="2020-01-04T08:00Z" timezone="GMT"
                 xmlns="uri:oozie:coordinator:0.2">

    <datasets>
        <dataset name="inputdataset" frequency="${coord:minutes(5)}"
                 initial-instance="2016-11-15T00:00Z" timezone="GMT">
            <uri-template>${nameNode}/dataforge/raw/data-assets/${customerID}</uri-template>
            <done-flag></done-flag>
        </dataset>

        <dataset name="outputdataset" frequency="${coord:minutes(5)}"
                 initial-instance="2016-11-15T00:00Z" timezone="GMT">
            <uri-template>${nameNode}/dataforge/standardized/data-assets/${customerID}</uri-template>
            <done-flag></done-flag>
        </dataset>
    </datasets>

    <!--EVENT-->
    <input-events>
        <data-in name="inputevent" dataset="inputdataset">
            <instance>${coord:current(0)}</instance>
        </data-in>
    </input-events>
    <output-events>
        <data-out name="outputevent" dataset="outputdataset">
            <instance>${coord:current(0)}</instance>
        </data-out>
    </output-events>

    <!--ACTION-->
    <action>
        <workflow>
            <app-path>${workflowAppUri}</app-path>
            <configuration>
                <property>
                    <name>inputDir</name>
                    <value>${coord:dataIn('inputevent')}</value>
                </property>
                <property>
                    <name>outputDir</name>
                    <value>${coord:dataOut('outputevent')}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>
